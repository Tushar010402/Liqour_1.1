# LiquorPro Backend - Environment Variables

# Application Version
VERSION=v1.0.0

# Database Configuration
DB_USER=liquorpro_user
DB_PASSWORD=change-this-secure-password-in-production
DB_NAME=liquorpro

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password-in-production

# JWT Configuration
JWT_SECRET=change-this-super-secret-jwt-key-in-production

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT=100

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Domain Configuration
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com