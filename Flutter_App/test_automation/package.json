{
  "name": "liquorpro-mobile-test-automation",
  "version": "1.0.0",
  "description": "Comprehensive mobile test automation for LiquorPro Flutter app using Appium",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:android",
    "test:android": "PLATFORM=android DEVICE_TYPE=emulator mocha tests/liquorpro_appium_tests.js --timeout 300000",
    "test:android:real": "PLATFORM=android DEVICE_TYPE=real mocha tests/liquorpro_appium_tests.js --timeout 300000",
    "test:ios": "PLATFORM=ios DEVICE_TYPE=simulator mocha tests/liquorpro_appium_tests.js --timeout 300000",
    "test:ios:real": "PLATFORM=ios DEVICE_TYPE=real mocha tests/liquorpro_appium_tests.js --timeout 300000",
    "test:smoke": "npm run test:android -- --grep \"App Launch|Authentication\"",
    "test:regression": "npm run test:android",
    "test:performance": "npm run test:android -- --grep \"Performance\"",
    "test:parallel": "npm run test:android & npm run test:ios",
    "setup:android": "node scripts/setup_android_env.js",
    "setup:ios": "node scripts/setup_ios_env.js",
    "start:appium": "appium --port 4723 --log-level info",
    "devices:android": "adb devices",
    "devices:ios": "xcrun xctrace list devices",
    "install:app:android": "node scripts/install_android_app.js",
    "install:app:ios": "node scripts/install_ios_app.js",
    "report": "node scripts/generate_report.js",
    "clean": "rimraf screenshots/ reports/ node_modules/.cache/",
    "lint": "eslint tests/ scripts/ appium_config.js",
    "lint:fix": "eslint tests/ scripts/ appium_config.js --fix"
  },
  "keywords": [
    "appium",
    "flutter",
    "mobile-testing",
    "automation",
    "e2e-testing",
    "liquorpro"
  ],
  "author": "LiquorPro Development Team",
  "license": "MIT",
  "dependencies": {
    "webdriverio": "^8.24.12",
    "appium": "^2.2.3",
    "@appium/flutter-driver": "^2.5.0",
    "@appium/android-driver": "^3.0.3",
    "@appium/xcuitest-driver": "^5.12.2"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liquorpro/mobile-app"
  },
  "bugs": {
    "url": "https://github.com/liquorpro/mobile-app/issues"
  },
  "homepage": "https://github.com/liquorpro/mobile-app#readme"
}