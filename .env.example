# LiquorPro Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_ENVIRONMENT=development
LOG_LEVEL=debug

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=liquorpro
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=liquorpro
DATABASE_SSLMODE=disable
DATABASE_TIMEZONE=Asia/Kolkata

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long
JWT_EXPIRE_HOURS=24

# Service Ports
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8090

AUTH_HOST=0.0.0.0
AUTH_PORT=8091

SALES_HOST=0.0.0.0
SALES_PORT=8092

INVENTORY_HOST=0.0.0.0
INVENTORY_PORT=8093

FINANCE_HOST=0.0.0.0
FINANCE_PORT=8094

FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8095

# Service URLs (for frontend)
GATEWAY_URL=http://localhost:8090
AUTH_SERVICE_URL=http://localhost:8091
SALES_SERVICE_URL=http://localhost:8092
INVENTORY_SERVICE_URL=http://localhost:8093
FINANCE_SERVICE_URL=http://localhost:8094

# Server Configuration
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=60

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8095
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Email Configuration (for notifications)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@liquorpro.com

# External Services
# OCR Service (for receipt processing)
OCR_ENABLED=false
OCR_API_KEY=your_ocr_api_key
OCR_PROVIDER=openai  # or claude

# Monitoring
MONITORING_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Security
BCRYPT_COST=12
CSRF_SECRET=your-csrf-secret-key
SECURE_COOKIES=false  # Set to true in production with HTTPS

# Business Configuration
# Critical: Assistant Manager money collection deadline
MONEY_COLLECTION_DEADLINE_MINUTES=15

# Inventory costing method
INVENTORY_COSTING_METHOD=FIFO  # FIFO, LIFO, or AVERAGE

# Default pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=1440  # 24 hours
REMEMBER_ME_DAYS=30

# Development Tools (only for development environment)
DEV_ADMINER_PORT=8090
DEV_REDIS_COMMANDER_PORT=8091
DEV_MAILHOG_PORT=8025